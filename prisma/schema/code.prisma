model EmailCode {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique @map("user_id")

  @@index([userId, id])
}

model PasswordCode {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique @map("user_id")

  @@index([userId, id])
}
